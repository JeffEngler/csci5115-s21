        tools:layout="@layout/fragment_productscansearch" />

    <fragment
        android:id="@+id/navigation_product_scorecard"
        android:name="io.moonen.charles.greengrocery.ui.product_scorecard.ProductScorecardFragment"
        android:label="@string/title_pscan"
        tools:layout="@layout/fragment_product_scorecard" />

    <fragment
        android:id="@+id/navigation_product_productsearch"
        android:name="io.moonen.charles.greengrocery.ui.product.ProductFragment"
        android:label="@string/title_pscan"
        tools:layout="@layout/fragment_product_productsearch" />

    <fragment
        android:id="@+id/navigation_faq"
        android:name="io.moonen.charles.greengrocery.ui.faqs.FaqsFragment"
        android:label="@string/title_activity_settings"
        tools:layout="@layout/fragment_faqs" />
